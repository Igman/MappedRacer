<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
         version="2.4">
         <welcome-file-list>
           <welcome-file>index.jsp</welcome-file>
         </welcome-file-list>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>Controller.LoginController
        </servlet-class>
    </servlet>
    <servlet>
        <servlet-name>callback</servlet-name>
        <servlet-class>Controller.TwitterCallbackController
        </servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>Controller.LogoutController
        </servlet-class>
    </servlet>
    <servlet>
        <servlet-name>tweet</servlet-name>
        <servlet-class>Controller.TweetController
        </servlet-class>
    </servlet>
    <servlet>
        <servlet-name>searchTweets</servlet-name>
        <servlet-class>Controller.TwitterSearchController
        </servlet-class>
    </servlet>
    <servlet>
        <servlet-name>joinRace</servlet-name>
        <servlet-class>Controller.JoinRaceController
        </servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>callback</servlet-name>
        <url-pattern>/callback</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>tweet</servlet-name>
        <url-pattern>/tweet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>searchTweets</servlet-name>
        <url-pattern>/serachTweets</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>joinRace</servlet-name>
        <url-pattern>/joinRace</url-pattern>
    </servlet-mapping>
    <servlet>
       <description></description>
       <display-name>CreateRaceController</display-name>
       <servlet-name>CreateRaceController</servlet-name>
       <servlet-class>Controller.CreateRaceController</servlet-class>
     </servlet>
     <servlet-mapping>
       <servlet-name>CreateRaceController</servlet-name>
       <url-pattern>/CreateRaceController</url-pattern>
     </servlet-mapping>
     <servlet>
       <description></description>
       <display-name>RaceController</display-name>
       <servlet-name>RaceController</servlet-name>
       <servlet-class>Controller.RaceController</servlet-class>
     </servlet>
     <servlet-mapping>
       <servlet-name>RaceController</servlet-name>
       <url-pattern>/RaceController</url-pattern>
     </servlet-mapping>
     <servlet>
       <description></description>
       <display-name>CheckInController</display-name>
       <servlet-name>CheckInController</servlet-name>
       <servlet-class>Controller.CheckInController</servlet-class>
     </servlet>
     <servlet-mapping>
       <servlet-name>CheckInController</servlet-name>
       <url-pattern>/CheckInController</url-pattern>
     </servlet-mapping>
     <servlet>
       <description></description>
       <display-name>PreRaceController</display-name>
       <servlet-name>PreRaceController</servlet-name>
       <servlet-class>Controller.PreRaceController</servlet-class>
     </servlet>
     <servlet-mapping>
       <servlet-name>PreRaceController</servlet-name>
       <url-pattern>/PreRaceController</url-pattern>
     </servlet-mapping>
    <!-- <error-page>
           <exception-type>twitter4j.TwitterException</exception-type>
           <location>/error.jsp</location>
       </error-page> -->
</web-app>